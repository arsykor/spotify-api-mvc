<p>
    <input type="button" value="Add tracks to MS SQL Server Db" onclick="location.href='@Url.Action("AddToDb", "Track")'" class="btn btn-default" />
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Album.Images);
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DurationMs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Explicit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsLocal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Popularity)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@Html.Raw(item.Album.Images[0].Url)" alt="a description of the image" width="80" height="80">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DurationMs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Explicit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsLocal)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Popularity)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |*@
                @Html.ActionLink("Details", "Details", new { id = item.Id })
                @*@Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
            </td>
        </tr>
    }

</table>
